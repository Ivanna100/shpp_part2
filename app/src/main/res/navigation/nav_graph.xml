<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.task_5.presentation.ui.fragments.splash.SplashFragment"
        android:label="SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/signInFragment"
        android:name="com.example.task_5.presentation.ui.fragments.auth.signin.SignInFragment"
        android:label="SignInFragment"
        tools:layout="@layout/fragment_sign_in">
        <action
            android:id="@+id/action_signInFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />
        <action
            android:id="@+id/action_signInFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.example.task_5.presentation.ui.fragments.auth.signup.SignUpFragment"
        android:label="SignUpFragment"
        tools:layout="@layout/fragment_sign_up" >
        <action
            android:id="@+id/action_signUpFragment_to_signUpExtendedFragment"
            app:destination="@id/signUpExtendedFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.task_5.presentation.ui.fragments.viewpager.ViewPagerFragment"
        android:label="ViewPagerFragment">
        <argument
            android:name="userData"
            app:argType="com.example.task_5.data.model.UserWithTokens" />
        <action
            android:id="@+id/action_viewPagerFragment_to_contactProfile"
            app:destination="@id/contactProfile" />
        <action
            android:id="@+id/action_viewPagerFragment_to_signInFragment"
            app:destination="@id/signInFragment" />
        <action
            android:id="@+id/action_viewPagerFragment_to_editProfileFragment"
            app:destination="@id/editProfile" />
    </fragment>
    <fragment
        android:id="@+id/signUpExtendedFragment"
        android:name="com.example.task_5.presentation.ui.fragments.auth.signup.signupextended.SignUpExtendedFragment"
        android:label="SignUpExtendedFragment"
        tools:layout="@layout/sign_up_extended" >
        <argument
            android:name="email"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
        <argument
            android:name="rememberMe"
            app:argType="boolean" />
        <action
            android:id="@+id/action_signUpExtendedFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactProfile"
        android:name="com.example.task_5.presentation.ui.fragments.ContactProfile"
        android:label="ContactProfile"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="Contact"
            app:argType="com.example.task_3.domain.model.Contact" />
    </fragment>
    <fragment
        android:id="@+id/userProfile"
        android:name="com.example.task_5.presentation.ui.fragments.userprofile.UserProfile"
        android:label="UserProfile"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="userProfile"
            app:argType="com.example.task_5.data.model.UserWithTokens" />
    </fragment>
    <fragment
        android:id="@+id/editProfile"
        android:name="com.example.task_5.presentation.ui.fragments.userprofile.editprofile.EditProfile"
        android:label="EditProfile"
        tools:layout="@layout/fragment_edit_profile" >
        <argument
            android:name="userData"
            app:argType="com.example.task_5.data.model.UserWithTokens" />
    </fragment>
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.example.task_5.presentation.ui.fragments.contacts.ContactsFragment"
        android:label="ContactsFragment"
        tools:layout="@layout/fragment_contacts">
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>

</navigation>