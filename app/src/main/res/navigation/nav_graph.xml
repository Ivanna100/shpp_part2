<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.task_4.ui.fragments.SplashFragment"
        android:label="SplashFragment" >
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment" />
        <action
            android:id="@+id/action_splashFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.task_4.ui.fragments.AuthFragment"
        android:label="AuthFragment">
        <action
            android:id="@+id/action_authFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.task_4.ui.fragments.viewpager.ViewPagerFragment"
        android:label="ViewPagerFragment">
        <argument
            android:name="email"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_viewPagerFragment_to_contactProfile"
            app:destination="@id/contactProfile" />
    </fragment>
    <fragment
        android:id="@+id/contactProfile"
        android:name="com.example.task_4.ui.fragments.ContactProfile"
        android:label="ContactProfile"
        tools:layout="@layout/fragment_detail">
        <argument
            android:name="Contact"
            app:argType="com.example.task_4.domain.model.Contact" />
    </fragment>
    <fragment
        android:id="@+id/userProfile"
        android:name="com.example.task_4.ui.fragments.UserProfile"
        android:label="UserProfile"
        tools:layout="@layout/fragment_user_profile">
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.example.task_4.ui.fragments.contacts.ContactsFragment"
        android:label="ContactsFragment"
        tools:layout="@layout/fragment_contacts">
        <argument
            android:name="email"
            app:argType="string" />
    </fragment>

</navigation>